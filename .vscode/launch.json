{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nperf",
                    "--package=nperf"
                ],
                "filter": {
                    "name": "nperf",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "TRACE",
            },
            "args": ["client", "--exchange-function", "msg"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "delay"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nperf",
                    "--package=nperf"
                ],
                "filter": {
                    "name": "nperf",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "TRACE",
            },
            "args": ["server", "--exchange-function", "msg"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run client",
            "env": {
                "RUST_LOG": "INFO",
            },
            "program": "${workspaceFolder}/target/debug/nperf",
            "args": ["client", "--exchange-function", "msg"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "delay"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run server",
            "env": {
                "RUST_LOG": "INFO",
            },
            "program": "${workspaceFolder}/target/debug/nperf",
            "args": ["server", "--exchange-function", "msg"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
        },
    ],
    "compounds": [
        {
            "name": "Compound server",
            "configurations": [
                "Debug server",
                "Run client"
            ],
            "stopAll": true
        },
        {
            "name": "Compound client",
            "configurations": [
                "Run server",
                "Debug client"
            ],
            "stopAll": true
        }
    ]
}