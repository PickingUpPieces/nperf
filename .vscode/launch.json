    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nperf",
                    "--package=nperf"
                ],
                "filter": {
                    "name": "nperf",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "TRACE",
            },
            "args": ["client", "--with-msg"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nperf",
                    "--package=nperf"
                ],
                "filter": {
                    "name": "nperf",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "TRACE",
            },
            "args": ["server", "--with-msg"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'nperf'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=nperf",
                    "--package=nperf"
                ],
                "filter": {
                    "name": "nperf",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}